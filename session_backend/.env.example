# Environment configuration for Session Backend API
# Copy this file to .env and modify values as needed

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/sessions

# API Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Health Check Settings
HEALTH_CHECK_TIMEOUT=10

# Development Settings (set to false in production)
DEBUG=true
RELOAD=true